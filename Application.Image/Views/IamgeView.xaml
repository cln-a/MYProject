<UserControl x:Class="Application.Image.Views.IamgeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewmodel="clr-namespace:Application.Image"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:halcon="http://schemas.mvtec.com/halcondotnet"
             d:DataContext="{d:DesignInstance viewmodel:ImageViewModel}"
             xmlns:local="clr-namespace:Application.Image.Views"
             mc:Ignorable="d" 
             d:DesignHeight="850"
             d:DesignWidth="1600"
             Background="White">
    <Grid>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Margin="5"
                  Background="white">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Margin="5"
                        BorderBrush="Black"
                        BorderThickness="1" 
                        Background="White">
                    <Image Margin="5" 
                           Source="{Binding ImageSource}"/>
                </Border>
                <Border Grid.Column="1"
                        Margin="5"
                        BorderBrush="Black"
                        BorderThickness="1" 
                        Background="white">
                    <halcon:HWindowControlWPF x:Name="HWinControl" />
                </Border>
            </Grid>
            <TextBox x:Name="txtLog"
                     Grid.Row="1"
                     Margin="5"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="1"
                     BorderBrush="Black"/>
        </Grid>
    </Grid>
</UserControl>
