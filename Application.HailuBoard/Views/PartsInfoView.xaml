<UserControl
    x:Class="Application.HailuBoard.PartsInfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:Application.HailuBoard"
    xmlns:controls="https://handyorg.github.io/handycontrol"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodel="clr-namespace:Application.HailuBoard"
    d:DataContext="{d:DesignInstance viewmodel:PartsInfoView}"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="数据总览" />
            <StackPanel
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="10"
                    Background="#4B91E2"
                    Command="{Binding InsertCommand}"
                    Content="增加数据"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Width="100"
                    Margin="10"
                    Background="Crimson"
                    Command="{Binding BatchDeleteCommand}"
                    Content="删除数据"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Width="100"
                    Margin="10"
                    Command="{Binding UpdateCommand}"
                    CommandParameter="{Binding ElementName=ProduceParameterDataGrid, Path=SelectedItem}"
                    Content="更新数据"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Width="100"
                    Margin="10,10,60,10"
                    Background="Orange"
                    Command="{Binding ForceQuitCommand}"
                    CommandParameter="{Binding ElementName=ProduceParameterDataGrid, Path=SelectedItem}"
                    Content="强制结束"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="设定合同号：" />
                <TextBox
                    Width="100"
                    Margin="5"
                    Text="{Binding BatchCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="设定批次：" />
                <TextBox
                    Width="100"
                    Margin="5"
                    Text="{Binding Batch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="设定名称：" />
                <TextBox
                    Width="100"
                    Margin="5"
                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Width="120"
                    Margin="5"
                    Background="#47a0ff"
                    Command="{Binding SetBatchCodeCommand}"
                    Content="设定"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </Grid>
        <DataGrid
            x:Name="ProduceParameterDataGrid"
            Grid.Row="1"
            Margin="0,5,0,10"
            behavior:DataGridSelectedItemsBehavior.BindableSelectedItems="{Binding SelectedItems}"
            controls:DataGridAttach.CanUnselectAllWithBlankArea="True"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="All"
            IsReadOnly="True"
            ItemsSource="{Binding Items}"
            MinRowHeight="45"
            RowHeaderWidth="60"
            SelectionMode="Extended"
            SelectionUnit="FullRow">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.RowHeaderTemplate>
                <DataTemplate>
                    <CheckBox Margin="20,0,0,0" IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" />
                </DataTemplate>
            </DataGrid.RowHeaderTemplate>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Id}"
                    CanUserSort="True"
                    Header="序号"
                    SortMemberPath="Id" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Quautity}"
                    CanUserSort="True"
                    Header="数量总计"
                    SortMemberPath="Quautity" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Countinfo}"
                    CanUserSort="True"
                    Header="当前已处理板件数量"
                    SortMemberPath="Countinfo" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding BatchCode}"
                    CanUserSort="True"
                    Header="合同号"
                    SortMemberPath="BatchCode" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Batch}"
                    CanUserSort="True"
                    Header="批次号"
                    SortMemberPath="Batch" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Name}"
                    CanUserSort="True"
                    Header="名称"
                    SortMemberPath="Name" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Description}"
                    CanUserSort="True"
                    Header="类型"
                    SortMemberPath="Description" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Length}"
                    CanUserSort="True"
                    Header="长度"
                    SortMemberPath="Length" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Width1}"
                    CanUserSort="True"
                    Header="宽度"
                    SortMemberPath="Width1" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Thickness}"
                    CanUserSort="True"
                    Header="厚度"
                    SortMemberPath="Thickness" />
                <DataGridCheckBoxColumn
                    Binding="{Binding McOrNot}"
                    CanUserSort="True"
                    Header="是否需要铣刀"
                    SortMemberPath="McOrNot" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoleLengthRight}"
                    CanUserSort="True"
                    Header="右侧铣刀长度"
                    SortMemberPath="HoleLengthRight" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoleDistanceRight}"
                    CanUserSort="True"
                    Header="右侧铣刀距离底部距离"
                    SortMemberPath="HoleDistanceRight" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoleLengthMiddle}"
                    CanUserSort="True"
                    Header="中间铣刀长度"
                    SortMemberPath="HoleLengthMiddle" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoleDistanceMiddle}"
                    CanUserSort="True"
                    Header="中间铣刀距离底部距离"
                    SortMemberPath="HoleDistanceMiddle" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoleLengthLeft}"
                    CanUserSort="True"
                    Header="左侧铣刀长度"
                    SortMemberPath="HoleLengthLeft" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoleDistanceLeft}"
                    CanUserSort="True"
                    Header="左侧铣刀距离底部距离"
                    SortMemberPath="HoleDistanceLeft" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="2"
            Margin="0,5,0,5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <materialDesign:PackIcon
                Width="24"
                Height="24"
                Cursor="Hand"
                Kind="ChevronLeft">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding PreviousPageCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </materialDesign:PackIcon>
            <TextBlock
                Margin="10,0"
                VerticalAlignment="Center"
                Text="{Binding pageNumber, StringFormat='第{0}页'}" />
            <materialDesign:PackIcon
                Width="24"
                Height="24"
                Cursor="Hand"
                Kind="ChevronRight">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding NextPageCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </materialDesign:PackIcon>
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="{Binding totalPage, StringFormat='共{0}页'}" />
        </StackPanel>
    </Grid>
</UserControl>
