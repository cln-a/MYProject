<UserControl
    x:Class="Application.Login.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:common="clr-namespace:Application.Common;assembly=Application.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodel="clr-namespace:Application.Login"
    d:DataContext="{d:DesignInstance viewmodel:LoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="Transparent"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    mc:Ignorable="d">
    <behavior:Interaction.Triggers>
        <behavior:EventTrigger EventName="Loaded">
            <behavior:InvokeCommandAction Command="{Binding LoginLoadCommand}" />
        </behavior:EventTrigger>
    </behavior:Interaction.Triggers>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Application.Login;component/Image/LoginBackground.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <StackPanel
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="50"
                    Height="50"
                    Margin="5"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Kind="ChartScatterPlotHexbin" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="40"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                    Text="Supervisory Control Data Acquisition" />
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBox
                    Width="240"
                    Margin="0,10,0,0"
                    materialDesign:HintAssist.Hint="{DynamicResource 用户名}"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding UserName}" />
                <PasswordBox
                    Width="240"
                    Margin="0,20,0,0"
                    common:PasswordBoxHelper.Password="{Binding UserPass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    materialDesign:HintAssist.Foreground="Green"
                    materialDesign:HintAssist.Hint="{DynamicResource 密码}"
                    materialDesign:TextFieldAssist.UnderlineBrush="Green"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                <Button
                    Width="240"
                    Margin="0,20,0,0"
                    materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                    materialDesign:ButtonProgressAssist.Value="-1"
                    Background="#47a0ff"
                    Command="{Binding LoginCommand}"
                    Content="{DynamicResource 登录}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <RadioButton
                    x:Name="CN"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding CheckCommand}"
                    CommandParameter="{Binding ElementName=CN, Path=Content}"
                    Content="简体中文"
                    Foreground="White"
                    IsChecked="True" />
                <RadioButton
                    x:Name="US"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding CheckCommand}"
                    CommandParameter="{Binding ElementName=US, Path=Content}"
                    Content="English"
                    Foreground="White"
                    IsChecked="False" />
                <RadioButton
                    x:Name="Russia"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding CheckCommand}"
                    CommandParameter="{Binding ElementName=Russia, Path=Content}"
                    Content="Россия"
                    Foreground="White"
                    IsChecked="False" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
