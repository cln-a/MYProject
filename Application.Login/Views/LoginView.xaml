<UserControl
    x:Class="Application.Login.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodel="clr-namespace:Application.Login"
    xmlns:common="clr-namespace:Application.Common;assembly=Application.Common"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:behavior = "http://schemas.microsoft.com/xaml/behaviors"
    d:DataContext="{d:DesignInstance viewmodel:LoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="Transparent"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    mc:Ignorable="d">
    <behavior:Interaction.Triggers>
        <behavior:EventTrigger EventName="Loaded">
            <behavior:InvokeCommandAction Command="{Binding LoginLoadCommand}"/>
        </behavior:EventTrigger>
    </behavior:Interaction.Triggers>
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="D:\WorkSpace\ApplicationFrameWork\Application.UI\Image\LoginBackground.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <StackPanel 
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="50"
                    Height="50"
                    Margin="5"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Kind="ChartScatterPlotHexbin"/>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="40"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                    Text="Supervisory Control Data Acquisition"/>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBox
                    Width="240"
                    Margin="0,10,0,0"
                    materialDesign:HintAssist.Hint="{DynamicResource 用户名}"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding UserName}" />
                <PasswordBox
                    Width="240"
                    Margin="0,20,0,0"
                    common:PasswordBoxHelper.Password="{Binding UserPass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    materialDesign:HintAssist.Foreground="Green"
                    materialDesign:HintAssist.Hint="{DynamicResource 密码}"
                    materialDesign:TextFieldAssist.UnderlineBrush="Green"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                </PasswordBox>
                <Button
                    Width="240"
                    Margin="0,20,0,0"
                    materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                    materialDesign:ButtonProgressAssist.Value="-1"
                    Background="#47a0ff"
                    Content="{DynamicResource 登录}"
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Command="{Binding LoginCommand}"/>
            </StackPanel>    
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="5">
                <RadioButton x:Name="CN" 
                             Content="简体中文" 
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="5"
                             IsChecked="True"
                             Command="{Binding CheckCommand}"
                             CommandParameter="{Binding ElementName=CN,Path=Content}"/>
                <RadioButton x:Name="US" 
                             Content="English" 
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="5"
                             IsChecked="False"
                             Command="{Binding CheckCommand}"
                             CommandParameter="{Binding ElementName=US,Path=Content}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
