<UserControl
    x:Class="Application.Login.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Application.Login.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:viewmodel="clr-namespace:Application.Login"
    xmlns:common="clr-namespace:Application.Common;assembly=Application.Common"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance viewmodel:LoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="Transparent"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    mc:Ignorable="d">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="D:\WorkSpace\ApplicationFrameWork\Application.UI\Image\LoginBackground.png" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <StackPanel 
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="50"
                    Height="50"
                    Margin="5"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Kind="ChartScatterPlotHexbin"/>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="35"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                    Text="Supervisory Control Data Acquisition"/>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="1">
            <TextBox
                Width="240"
                Margin="0,10,0,0"
                materialDesign:HintAssist.Hint="用户名："
                Foreground="White"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding UserName}" />
            <PasswordBox
                Width="240"
                Margin="0,20,0,0"
                common:PasswordBoxHelper.Password="{Binding UserPass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                materialDesign:HintAssist.Foreground="Green"
                materialDesign:HintAssist.Hint="密码："
                materialDesign:TextFieldAssist.UnderlineBrush="Green"
                Foreground="White"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
            </PasswordBox>
            <Button
                Width="240"
                Margin="0,20,0,0"
                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                materialDesign:ButtonProgressAssist.Value="-1"
                Background="#47a0ff"
                Content="登录"
                Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</UserControl>
