<UserControl x:Class="Application.ArtificialIntelligence.ArtificialIntelligenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:Application.ArtificialIntelligence"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:materiaDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance vm:ArtificialIntelligenceViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="1200"
             FontFamily="Microsoft YaHei"
             FontSize="16"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular">
    <Grid Margin="5" 
          Background="{DynamicResource materiaDesign.Brush.Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,10,0">
            <TextBlock Margin="8,0,0,8"
                       Text="模型："
                       FontSize="16"
                       FontWeight="Bold"/>
            <ComboBox Height="32" 
                      Margin="8,0,16,0"
                      ItemsSource="{Binding ModelList}"
                      SelectedItem="{Binding SelectedModel}"/>
            <TextBlock Margin="8,8,0,8"
                      Text="角色Prompt："
                      FontSize="16"
                      FontWeight="Bold"/>
            <TextBox Height="60"
                     Margin="8,0,16,0"
                     FontWeight="Bold"
                     Text="{Binding SystemPrompt}"
                     AcceptsReturn="True"/>
            <TextBlock Margin="8,8,0,8"
                     Text="MaxTokens："
                     FontSize="16"
                     FontWeight="Bold"/>
            <Slider Margin="8,8,8,8"
                    IsSnapToTickEnabled="True"
                    Maximum="9182"
                    Minimum="1"
                    TickFrequency="512"
                    Value="{Binding MaxTokens}"/>
            <TextBlock Margin="8,8,0,8"
                    Text="Temperature："
                    FontSize="16"
                    FontWeight="Bold"/>
            <Slider Margin="8,8,8,8"
                    IsSnapToTickEnabled="True"
                    Maximum="1"
                    Minimum="0"
                    TickFrequency="0.1"
                    Value="{Binding Temperature}"/>
            <TextBlock Margin="8,8,0,8"
                    Text="TopP："
                    FontSize="16"
                    FontWeight="Bold"/>
            <Slider Margin="8,8,8,8"
                    IsSnapToTickEnabled="True"
                    Maximum="1"
                    Minimum="0"
                    TickFrequency="0.1"
                    Value="{Binding TopP}"/>
            <TextBlock Margin="8,8,0,8"
                    Text="TopK："
                    FontSize="16"
                    FontWeight="Bold"/>
            <Slider Margin="8,8,8,8"
                    IsSnapToTickEnabled="True"
                    Maximum="100"
                    Minimum="0"
                    TickFrequency="1"
                    Value="{Binding TopK}"/>
        </StackPanel>
        <Border Grid.Column="2"
                Padding="24"
                Background="#FFF"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="0,0,0,16"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#666"
                           Text="{Binding SelectedModel}"/>
                <ScrollViewer x:Name="ChatScrollViewer"
                              Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <TextBlock FontSize="15"
                               Text="{Binding RequestResult}"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
                <StackPanel Grid.Row="2" 
                            Margin="0,16,0,0"
                            Orientation="Horizontal">
                    <TextBox Width="auto"
                             Height="40"
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"
                             MinWidth="800"
                             Text="{Binding Question,UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Width="140"
                            Height="40"
                            Margin="5,0,0,0"
                            Content="发送"
                            Command="{Binding RequestCommand}"/>
                    <Button Width="140"
                            Height="40"
                            Margin="5,0,0,0"
                            Content="清空"
                            Command="{Binding ClearCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
