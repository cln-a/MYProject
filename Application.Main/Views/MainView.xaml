<UserControl
    x:Class="Application.Main.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materiaDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="clr-namespace:Application.Common;assembly=Application.Common"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:Application.Main"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="White"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadMenuCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <materiaDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
        <materiaDesign:DrawerHost.LeftDrawerContent>
            <DockPanel MinWidth="170">
                <StackPanel DockPanel.Dock="Top">
                    <Image
                        Width="100"
                        Height="50"
                        Margin="0,20,0,5"
                        Source="D:\WorkSpace\ApplicationFrameWork\Application.UI\Image\莫比乌斯环.png" />
                    <TextBlock
                        Margin="0,10"
                        HorizontalAlignment="Center"
                        Text="Leev Vision" />
                </StackPanel>
                <ListBox x:Name="ListMenu" ItemsSource="{Binding MenuBars}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding NavigateCommand}" CommandParameter="{Binding ElementName=ListMenu, Path=SelectedItem}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MaterialDesignFilterChipOutlineListBoxItem}" TargetType="ListBoxItem" />
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <materiaDesign:PackIcon 
                                    Margin="20,0" 
                                    Kind="{Binding Icon}"/>
                                <TextBlock
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center" 
                                    Text="{Binding MenuName}"
                                    MinWidth="150"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </materiaDesign:DrawerHost.LeftDrawerContent>
        <Grid>
            <DockPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ContentControl
                        Grid.Row="0"
                        x:Name="MainViewContainer"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        prism:RegionManager.RegionName="{x:Static common:ConstName.MainViewRegion}" />
                    <DockPanel Grid.Row="1" Background="#cfd8dc">
                        <RadioButton x:Name="Russia" 
                             Content="Россия" 
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="5"
                             IsChecked="False"
                             Command="{Binding CheckCommand}"
                             CommandParameter="{Binding ElementName=Russia,Path=Content}"
                             DockPanel.Dock="Right"/>
                        <RadioButton x:Name="CN" 
                             Content="简体中文" 
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="5"
                             IsChecked="True"
                             Command="{Binding CheckCommand}"
                             CommandParameter="{Binding ElementName=CN,Path=Content}"
                             DockPanel.Dock="Right"/>
                        <RadioButton x:Name="US" 
                             Content="English" 
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="5"
                             IsChecked="False"
                             Command="{Binding CheckCommand}"
                             CommandParameter="{Binding ElementName=US,Path=Content}"
                             DockPanel.Dock="Right"/>
                        <Image
                            Width="25"
                            Margin="0,0,20,0"
                            DockPanel.Dock="Right"
                            Source="D:\WorkSpace\ApplicationFrameWork\Application.UI\Image\Exit.png">
                        </Image>
                        <ToggleButton
                            Name="MenuToggleButton"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                    </DockPanel>
                </Grid>
            </DockPanel>
        </Grid>
    </materiaDesign:DrawerHost>
</UserControl>
