<UserControl
    x:Class="Application.Main.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Application.Common;assembly=Application.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materiaDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:Application.Main"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="White"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadMenuCommand}" />
            <i:InvokeCommandAction Command="{Binding LoadDeviceStateCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <materiaDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
        <materiaDesign:DrawerHost.LeftDrawerContent>
            <DockPanel MinWidth="170">
                <StackPanel DockPanel.Dock="Top">
                    <Image
                        Width="100"
                        Height="50"
                        Margin="0,20,0,5"
                        Source="/Application.Main;component/Image/莫比乌斯环.png" />
                    <TextBlock
                        Margin="0,10"
                        HorizontalAlignment="Center"
                        Text="Leev Vision" />
                </StackPanel>
                <ListBox x:Name="ListMenu" ItemsSource="{Binding MenuBars}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding NavigateCommand}" CommandParameter="{Binding ElementName=ListMenu, Path=SelectedItem}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MaterialDesignFilterChipOutlineListBoxItem}" TargetType="ListBoxItem" />
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Background="Transparent" Orientation="Horizontal">
                                <materiaDesign:PackIcon Margin="20,0" Kind="{Binding Icon}" />
                                <TextBlock
                                    MinWidth="150"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding MenuName}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </materiaDesign:DrawerHost.LeftDrawerContent>
        <Grid>
            <DockPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ContentControl
                        x:Name="MainViewContainer"
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        prism:RegionManager.RegionName="{x:Static common:ConstName.MainViewRegion}" />
                    <DockPanel Grid.Row="1" Background="#cfd8dc">
                        <ItemsControl DockPanel.Dock="Left" ItemsSource="{Binding StateBars}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="10,0" Orientation="Horizontal">
                                        <Image
                                            Width="20"
                                            Height="20"
                                            Source="{Binding StateImageSource}" />
                                        <TextBlock
                                            Margin="5,5,5,5"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="{Binding DeviceName}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <RadioButton
                            x:Name="Russia"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding CheckCommand}"
                            CommandParameter="{Binding ElementName=Russia, Path=Content}"
                            Content="Россия"
                            DockPanel.Dock="Right"
                            Foreground="White"
                            IsChecked="False" />
                        <RadioButton
                            x:Name="CN"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding CheckCommand}"
                            CommandParameter="{Binding ElementName=CN, Path=Content}"
                            Content="简体中文"
                            DockPanel.Dock="Right"
                            Foreground="White"
                            IsChecked="True" />
                        <RadioButton
                            x:Name="US"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding CheckCommand}"
                            CommandParameter="{Binding ElementName=US, Path=Content}"
                            Content="English"
                            DockPanel.Dock="Right"
                            Foreground="White"
                            IsChecked="False" />
                        <ToggleButton
                            Name="MenuToggleButton"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                    </DockPanel>
                </Grid>
            </DockPanel>
        </Grid>
    </materiaDesign:DrawerHost>
</UserControl>
